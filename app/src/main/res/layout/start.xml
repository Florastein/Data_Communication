<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DD091850"
    tools:context=".scar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="10sp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/menu" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Data Communication 200 A+ Question And Answers"
            android:textAlignment="center"
            android:textColor="#18FFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="normal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textColor="@color/white"
            android:layout_marginStart="5sp"/>

        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginStart="200sp"
            android:text="00:40"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/questionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:background="@drawable/bba"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="40dp"
            android:text="1. Which of the following is NOT an advantage of using SSDs over HDDs?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/answerRadioGroup"
            android:layout_width="match_parent"
            android:layout_margin="30sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- RadioButtons for question 1 answers -->

        </RadioGroup>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="138dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:text="Next" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>




</LinearLayout>
